<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" fx:controller="s2.FXMLCustomerCreateController">
    <center>
        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1">
                <Label prefWidth="100" text="Name" />
                <TextField fx:id="customerName" promptText="Customer Name" />
            </HBox>
            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2">
                <Label prefWidth="100" text="Address" />
                <TextField fx:id="address" promptText="Address" />
            </HBox>
            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3">
                <Label prefWidth="100" text="Address2" />
                <TextField fx:id="address2" promptText="Address2" />
            </HBox>
            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="4">
                <Label prefWidth="100" text="City" />
                <TextField fx:id="city" promptText="City" />
            </HBox>
            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="5">
                <Label prefWidth="50" text="Zip" />
                <TextField fx:id="postalCode" promptText="Zip" />
            </HBox>
            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="6">
                <Label prefWidth="50" text="Country" />
                <TextField fx:id="country" promptText="Country" />
            </HBox>
            <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="7">
                <Label prefWidth="50" text="Phone" />
                <TextField fx:id="phone" promptText="Phone" />
            </HBox>
        </GridPane>
    </center>
    <bottom>
        <HBox spacing="10" alignment="bottom_right">
            <Button text="Save" fx:id="saveButton" onAction="#handleSave" />
            <Button text="Cancel" fx:id="cancelButton" onAction="#handleCancel" />
        </HBox>
    </bottom>
</BorderPane>
